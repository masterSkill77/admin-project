<style>


/* Add this CSS to your stylesheet or in a <style> tag */
    .card-img-container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 150px; /* Set the desired height */
    overflow: hidden;
}

.card-img {
    width: 100%;
    height: auto;
    object-fit: cover;
}


</style>

</head>

<body>
     <!--This is a Header Section Code-->
     <%- include('../partials/header.ejs')%>

    <!--start card-->
    <div class="mb-2 mt-3">
        <div class="row text-center">
            <div class="col">
                <div class="text-center text-primary">
                    <h2>Product<span class="text-danger">Collection</span></h2>
                </div>
            </div>
        </div>
    
        <div class="row mt-4">
            <% record.forEach((result, key) => { %>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-img-container">
                          <a href="/productorder/<%= result._id %>"><img src="/productsi/<%= result.frontImage %>" class="card-img" alt="Front Image"></a>  
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= result.name %></h5>
                        </div>
                       
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
    
    

       

   <!--This is Footer Section-->
   <%- include('../partials/footer.ejs')%>

   <!--This is a Copyroght Footer Section Code-->
   <%- include('../partials/copyright.ejs')%>


