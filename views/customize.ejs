    <link rel="stylesheet" href="css/style.css">
</head>

<body>
     <!--This is a Header Section Code-->
     <%- include('../partials/header.ejs')%>
    
    <section id="rugs">
        <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <h2>
                        Customize Your Own Design
                    </h2>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <form action="/api/submit" method="post" enctype="multipart/form-data">
                        <label for="carpetName">Carpet Name</label>
                        <input type="text" name="carpetName" id="carpetName" class="form-control" placeholder="Carpet Name *" required>
                        
                        <label for="designImage">Upload your design</label>
                        <input type="file" name="designImage" id="designImage" class="form-control">
                        
                        <label for="length">carpet size</label>
                        <input type="text" name="length" id="length" class="form-control" placeholder="Length (in ft) *"  required>
                        
                        <input type="text" name="width" id="width" class="form-control mt-1" placeholder="Width (in ft) *"  required>
                        
                        <label for="yourName">Your Name</label>
                        <input type="text" name="yourName" id="yourName" class="form-control" placeholder="Your Name *"  required>
                        
                        <label for="yourEmail">Your Email</label>
                        <input type="email" name="yourEmail" id="yourEmail" class="form-control" placeholder="Your Email Id *"  required>
                        
                        <label for="yourMobileNumber">Your Mobile Number</label>
                        <input type="number" name="yourMobileNumber" id="yourMobileNumber" class="form-control" placeholder="Your Mobile Number *"  required>
                        
                        <button type="submit" class="btn btn-warning mt-2 mb-2 ">Submit</button>
                    </form>
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>
    </section>

   <!--This is Footer Section-->
   <%- include('../partials/footer.ejs')%>

