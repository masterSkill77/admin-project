     <section id="product-details ">
        <h1 class="text-center text-danger mt-5">Product <span class="text-primary">Details</span></h1>
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-6">
                    <!-- Main Image -->
                    <div class="main-image-container">
                        <img src="/productsi/<%= Product.frontImage %>" class="img-fluid main-image" alt="Product Image">
                    </div>
            
                    <!-- Thumbnail Images -->
                    <div class="thumbnail-images">
                        <img src="/productsi/<%= Product.frontImage %>" class="thumbnail selected-thumbnail" alt="Product Image">
                        <img src="/productsi/<%= Product.sideImage %>" class="thumbnail" alt="Product Image">
                        <img src="/productsi/<%= Product.backImage %>" class="thumbnail" alt="Product Image">
                    </div>
            
                    <!-- Product Details -->
                    <div class="product-details">
                        <!-- <h5>Quality : <span class="badge bg-secondary"><%= Product.subCategory %></span></h5> -->
                        <h5>Design Code : <span class="badge bg-secondary"><%= Product.code %></span></h5>
                        <h5>Color : <span class="badge bg-secondary"><%= Product.style %></span></h5>
                        <h5>Size : <span class="badge bg-secondary"><%= Product.size %></span></h5>
                        <h5>Description : <span class="badge bg-secondary"><%= Product.description %></span></h5>
                    </div>
                </div>
            
            

                <div class="col-lg-6">
                    <form action="/orderpost" method="post">
                        <div class="mb-3">
                            <label for="orderType" class="form-label">Order For*</label>
                            <select class="form-select" id="orderType" name="orderType" required>
                                <option selected>Choose</option>
                                <option value="quotation">Quotation</option>
                                <option value="sample">Sample</option>
                            </select>
                        </div>
                        <!-- Other form elements go here -->
                        <div class="row">
                            <div class="col-md-6">
                                <label for="designCode">Design Code</label>
                                <input type="text" id="designCode"  name="designCode"   class="form-control" placeholder="designCode" required>
                            </div>
                            <div class="col-md-6">
                                <label for="construction">Construction</label>
                                <input type="text" class="form-control" id="construction"  name="construction" placeholder="Quality"   required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="firstName">First Name:</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" required>
                            </div>
                            <div class="col-md-6">
                                <label for="lastName">Last Name:</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" required>
                            </div>
                        </div>
                        <label for="quantity">Quantity:</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" required>
                        <label for="customerName">Customer Name:</label>
                        <input type="text" class="form-control" id="customerName" name="customerName" required>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="material">Material*</label>
                                <select class="form-select" id="material" name="material" required>
                                    <option selected>Choose</option>
                                    <option value="Viscose Wool">Viscose Wool</option>
                                    <option value="Indial Wool">Indial Wool</option>
                                    <option value="Jute">Jute</option>
                                    <option value="New Zealand Wool">New Zealand Wool</option>
                                    <option value="Leather">Leather</option>
                                    <option value="Polyester Yarn">Polyester Yarn</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="color-changes">Color Changes*</label>
                                <select class="form-select" id="colorChanges" name="colorChanges" required>
                                    <option selected>Choose</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="email">Email Id:</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="col-md-6">
                                <label for="mobile">Mobile/Whatsapp:</label>
                                <input type="tel" class="form-control" id="mobile" name="mobile" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="city">City*:</label>
                                <input type="text" class="form-control" id="city" name="city" required>
                            </div>
                            <div class="col-md-6">
                                <label for="zipCode">Zip Code*:</label>
                                <input type="text" class="form-control" id="zipCode" name="zipCode" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="state">State*:</label>
                                <input type="text" class="form-control" id="state" name="state" required>
                            </div>
                            <div class="col-md-6">
                                <label for="country">Country*:</label>
                                <input type="text" class="form-control" id="country" name="country" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Submit Order</button>
                        <a href="/product" class="btn btn-warning mt-2">Back To Collection</a>
                    </form>
                </div>
            </div>
        </div>
    </section>

